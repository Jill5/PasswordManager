<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.passwordmanager.SendMailActivity">

    <EditText
        android:id="@+id/mail_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="在这里输入您的邮箱"
        android:background="@drawable/password_input"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/send_btn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="发送"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/mail_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/cancelsend_btn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="取消"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/mail_input"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn"
        android:textColor="#FFFFFF"/>


</android.support.constraint.ConstraintLayout>
